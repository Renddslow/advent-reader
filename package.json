{
	"name": "advent-reader",
	"version": "1.0.0",
	"private": false,
	"description": "A reader app for readadvent.com",
	"repository": "https://github.com/Renddslow/advent-reader",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build:plan": "node tools/convertPlan.js",
		"build:yves": "node tools/parseYves.js",
		"build:html": "node tools/parseHTML.js",
		"build:clean": "node tools/cleanJSON.js",
		"build:merge": "node tools/mergeFiles.js",
		"build:data": "run-s build:plan build:yves build:html build:clean build:merge",
		"build:js": "node build.js --minify",
		"build": "run-p build:data build:js",
		"postbuild": "cp data/plan.json public/data",
		"start": "netlify dev",
		"watch": "node build.js --watch"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/**/*.test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/cookie": "^0.4.1",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/node": "^16.11.7",
		"@types/uuid": "^8.3.1",
		"ava": "^3.15.0",
		"cpy": "^8.1.2",
		"dot-prop": "^6.0.1",
		"dotenv": "^10.0.0",
		"esbuild": "^0.12.16",
		"globby": "^12.0.2",
		"hast-util-select": "^5.0.1",
		"husky": "^7.0.4",
		"lint-staged": "^11.2.6",
		"make-dir": "^3.1.0",
		"mri": "^1.1.6",
		"netlify-cli": "^5.2.6",
		"npm-run-all": "^4.1.5",
		"papaparse": "^5.3.1",
		"prettier": "^2.4.1",
		"rimraf": "^3.0.2",
		"templite": "^1.1.0",
		"ts-node": "^10.4.0",
		"typescript": "^4.4.4",
		"unist-util-select": "^4.0.1",
		"unist-util-visit": "^4.1.0",
		"unist-util-visit-parents": "^5.1.0",
		"yaml": "^1.10.2"
	},
	"dependencies": {
		"@netlify/functions": "^0.7.2",
		"@sendgrid/mail": "^7.4.7",
		"catchify": "^2.6.1",
		"click-should-be-intercepted-for-navigation": "^1.0.0",
		"cookie": "^0.4.1",
		"date-fns": "^2.24.0",
		"faunadb": "^4.4.1",
		"goober": "^2.0.39",
		"jsonwebtoken": "^8.5.1",
		"luxon": "^2.0.2",
		"mandrill-api": "^1.0.45",
		"md5": "^2.3.0",
		"preact": "^10.5.14",
		"rehype-parse": "^8.0.3",
		"sort-on": "^4.1.1",
		"unified": "^10.1.0",
		"uuid": "^8.3.2",
		"wouter": "^2.7.4",
		"wouter-preact": "^2.7.4"
	}
}
